<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.cards.CardsFragment">

    <Button
        android:id="@+id/addCard"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="16dp"
        android:insetLeft="2dp"
        android:insetTop="2dp"
        android:insetRight="2dp"
        android:insetBottom="2dp"
        app:cornerRadius="@android:dimen/app_icon_size"
        app:icon="@android:drawable/ic_input_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/remainingCards"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:insetLeft="2dp"
        android:insetTop="2dp"
        android:insetRight="2dp"
        android:insetBottom="2dp"
        app:cornerRadius="@android:dimen/app_icon_size"
        app:icon="@android:drawable/ic_menu_search"
        app:layout_constraintEnd_toEndOf="@+id/addCard"
        app:layout_constraintTop_toBottomOf="@+id/addCard" />

    <Button
        android:id="@+id/resetDeck"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:insetLeft="2dp"
        android:insetTop="2dp"
        android:insetRight="2dp"
        android:insetBottom="2dp"
        app:cornerRadius="@android:dimen/app_icon_size"
        app:icon="@android:drawable/ic_menu_revert"
        app:layout_constraintEnd_toEndOf="@+id/addCard"
        app:layout_constraintTop_toBottomOf="@+id/remainingCards" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="237dp"
        android:layout_height="364dp"
        android:layout_marginEnd="32dp"
        android:contentDescription="@string/drawn_card"
        android:src="@drawable/card0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

</androidx.constraintlayout.widget.ConstraintLayout>